<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >


    <Button
        android:id="@+id/btnBackward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnTurnRight"
        android:layout_centerHorizontal="true"
        android:text="@string/strBackWard" />

    <Button
        android:id="@+id/btnTurnLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="154dp"
        android:layout_toStartOf="@+id/btnBackward"
        android:text="@string/strTurnLeft" />

    <Button
        android:id="@+id/btnTurnRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnStop"
        android:layout_alignBottom="@+id/btnStop"
        android:layout_toRightOf="@+id/btnStop"
        android:text="@string/strTurnRight" />

    <Button
        android:id="@+id/btnForward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_above="@+id/btnTurnLeft"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-154dp"
        android:text="@string/strForWard" />

    <Button
        android:id="@+id/btnStop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnTurnLeft"
        android:layout_centerHorizontal="true"
        android:text="@string/strStop" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/btnBackward"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="66dp"
         />

    <Button
        android:id="@+id/btnLeftFront"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnTurnLeft"
        android:layout_marginBottom="-154dp"
        android:layout_toStartOf="@+id/btnBackward"
        android:text="@string/leftFront" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rightFront"
        android:id="@+id/btnRightFront"
        android:layout_alignTop="@+id/btnForward"
        android:layout_alignLeft="@+id/btnTurnRight"
        android:layout_alignStart="@+id/btnTurnRight"
        android:layout_alignRight="@+id/btnTurnRight"
        android:layout_alignEnd="@+id/btnTurnRight"
        android:layout_above="@+id/btnTurnRight" />

    <Button
        android:id="@+id/btnLeftBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="202dp"
        android:layout_toStartOf="@+id/btnBackward"
        android:text="@string/leftBack" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rightBack"
        android:id="@+id/btnRightBack"
        android:layout_alignBottom="@+id/btnBackward"
        android:layout_toRightOf="@+id/btnBackward"
        android:layout_alignRight="@+id/btnTurnRight"
        android:layout_alignEnd="@+id/btnTurnRight"
        android:layout_alignTop="@+id/btnBackward" />

    <Button
        android:id="@+id/btnReboot"
        android:layout_width="67dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/btnTurnLeft"
        android:layout_marginTop="16dp"
        android:text="@string/reboot" />

    <Button
        android:id="@+id/btnShutdown"
        android:layout_width="67dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnForward"
        android:layout_alignStart="@+id/btnTurnLeft"
        android:text="@string/shutdown" />

    <EditText
        android:id="@+id/edtIP"
        android:layout_width="153dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btnBackward"
        android:layout_alignTop="@+id/btnReboot"
        android:text="192.168.1.104" />

</RelativeLayout>